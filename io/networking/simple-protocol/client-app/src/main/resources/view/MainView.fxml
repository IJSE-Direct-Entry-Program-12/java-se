<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="195.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep12.client.controller.MainViewController">
   <children>
      <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" text="Simple Protocol App" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <VBox layoutX="14.0" layoutY="51.0" spacing="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="53.0" prefWidth="316.0">
                     <children>
                        <HBox alignment="CENTER_RIGHT">
                           <children>
                              <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="67.0" text="ID: " />
                              <TextField fx:id="txtId" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT">
                           <children>
                              <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="68.0" text="NAME: " HBox.hgrow="ALWAYS" />
                              <TextField fx:id="txtName" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <Button fx:id="btnSendCustomer" mnemonicParsing="false" onAction="#btnSendCustomerOnAction" prefHeight="40.0" prefWidth="132.0" text="SEND CUSTOMER" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <TextField fx:id="txtMessage" prefHeight="24.0" prefWidth="312.0" />
                  <Button fx:id="btnSendMessage" mnemonicParsing="false" onAction="#btnSendMessageOnAction" prefHeight="24.0" prefWidth="132.0" text="SEND MESSAGE" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <HBox prefHeight="24.0" prefWidth="309.0">
                     <children>
                        <TextField fx:id="txtFile" editable="false" prefHeight="24.0" prefWidth="185.0" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnBrowse" mnemonicParsing="false" onAction="#btnBrowseOnAction" prefHeight="24.0" prefWidth="79.0" text="BROWSE" />
                     </children>
                  </HBox>
                  <Button fx:id="btnSendFile" mnemonicParsing="false" onAction="#btnSendFileOnAction" prefHeight="24.0" prefWidth="132.0" text="SEND FILE" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
